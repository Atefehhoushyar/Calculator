<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/result_text"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="@string/result"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:layout_weight="1"
            >

        </TextView>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="15sp" />


            <Button
                android:id="@+id/button2"
                android:text="2"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button3"
                android:text="3"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/Plus_but"
                android:text="+"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="addtwonumber"/>




        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"

            >

            <Button
                android:id="@+id/button4"
                android:text="4"
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button5"
                android:text="5"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button6"
                android:text="6"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/Min_but"
                android:gravity="center_vertical|center_horizontal"
                android:text="-"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="subtwonumber"/>


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"

            >

            <Button
                android:id="@+id/button7"
                android:text="7"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button8"
                android:text="8"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button9"
                android:text="9"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/Times_but"
                android:text="*"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/buttonC"
                android:text="C"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button0"
                android:text="0"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/buttonEqul"
                android:text="="
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/Div_but"
                android:text="/"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="150dp"
        android:layout_marginTop="90dp"
        >
        <Button
            android:id="@+id/buttonAdvance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/mediumslateblue"
            android:text="@string/button">

        </Button>
        <TextView
            android:id="@+id/history"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:hint="@string/result"
            android:textSize="20sp"
            >

        </TextView>
    </LinearLayout>

</LinearLayout>